<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35465C">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/icon_pessoa" />

    <EditText
        android:id="@+id/ed_cadastro_nome"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_person"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_cadastro_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user"
        android:layout_alignStart="@+id/ed_cadastro_nome"
        android:layout_alignLeft="@+id/ed_cadastro_nome"
        android:layout_marginTop="20dp"
        android:text="Nome"
        android:textColor="#ffffff"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/ed_cadastro_email"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed_cadastro_nome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email"
        android:textColor="#ffffff">
        <requestFocus>

        </requestFocus>
    </EditText>


    <TextView
        android:id="@+id/tv_cadastro_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_cadastro_nome"
        android:layout_alignStart="@+id/ed_cadastro_nome"
        android:layout_alignLeft="@+id/ed_cadastro_nome"
        android:layout_marginTop="20dp"
        android:text="Email"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ed_cadastro_senha"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ed_cadastro_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/icon_senha"
        android:textColor="#ffffff" >
        <requestFocus>

        </requestFocus>/>
    </EditText>

    <TextView
        android:id="@+id/tv_cadastro_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_cadastro_email"
        android:layout_alignStart="@+id/ed_cadastro_email"
        android:layout_alignLeft="@+id/ed_cadastro_email"
        android:layout_marginTop="20dp"
        android:text="Senha"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/sp_organizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_cadastro_senha"
        android:layout_alignStart="@+id/ed_cadastro_senha"
        android:layout_alignLeft="@+id/ed_cadastro_senha"
        android:visibility="invisible">

    </Spinner>

    <Button
        android:id="@+id/btn_cadastrar"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp_organizacao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/botao_radius"
        android:clickable="true"
        android:text="Cadastrar"
        android:textColor="#ffffff"
        android:textSize="20sp" />
    </RelativeLayout>

</ScrollView>