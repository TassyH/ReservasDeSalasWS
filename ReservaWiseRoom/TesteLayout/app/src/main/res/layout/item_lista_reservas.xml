<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corBranco">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_reserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/borda_sombreada">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f0f0">



            <TextView
                android:id="@+id/item_nome_sala"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:textColor="#000000"
                android:textSize="20sp"
                android:text="Nome Sala"
                android:textStyle="bold"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="MissingConstraints"
                />


                <TextView
                    android:id="@+id/item_datahora_inicial"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Horario Inicial"
                    android:padding="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/corBack"
                    app:layout_constraintTop_toBottomOf="@id/item_nome_sala"
                    android:textColorHint="@android:color/black"
                    tools:ignore="MissingConstraints">

                </TextView>

                <TextView
                    android:id="@+id/item_datahora_final"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Horario final"
                    android:padding="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/corBack"
                    app:layout_constraintTop_toBottomOf="@+id/item_datahora_inicial"
                    android:textColorHint="@android:color/black"
                    tools:ignore="MissingConstraints">

                </TextView>


            <TextView
                android:id="@+id/item_descricao_reserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_datahora_final"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="reuniao sobre os trainees de pa"
                android:textStyle="normal"
                android:padding="5dp"
                app:layout_constraintTop_toBottomOf="@id/item_datahora_final"
                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>