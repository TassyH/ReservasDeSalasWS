<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corBack">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/icon_pessoa"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_user_nome"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@+id/iv_user"
        app:layout_constraintTop_toTopOf="@id/iv_user"
        android:text="Seu Nome"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_user_email"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_user_nome"
        app:layout_constraintTop_toTopOf="@id/tv_user_nome"
        android:text="Seu Email"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:textSize="16sp"
        tools:ignore="MissingConstraints">

    </TextView>

    <TextView
        android:id="@+id/tv_user_senha"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_cadastro_email"
        app:layout_constraintTop_toTopOf="@id/tv_user_email"
        android:text="Sua Senha"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:textSize="16sp"
        tools:ignore="MissingConstraints">

    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>